<style type="text/css">
   body { background: darken(#428bca, 25.5%) !important;
    margin-bottom:100px;
    margin-bottom: 0 auto;
}
</style>
<div class='text-center'>
<div class="form-inline">
<h2>Edit <%= resource_name.to_s.humanize %></h2></br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },:multipart => true) do |f| %>
  <div class="form-group">
    <%= f.label :username, :class=>'exampleInputName2', :class=>"control-label", :class=>"inputSuccess1" %><br />
    <%= f.text_field :username, autofocus: true, :class=>"form-control", :id=>"exampleInputName2" %>
  </div></br>
<div class="row">
    <div class="text-center">
  <div class="form-group">
    <%= f.label :email, :class=>'exampleInputEmail2' %><br />
    <%= f.email_field :email, autofocus: 'off', :class=>"form-control", :id=>"exampleInputEmail2" %>
  </div></br>
</div>
</div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div></br>
    <div class="form-group">
    <%if @user.avatar.present?%>
    <%=image_tag(@user.avatar.url(:thumb) ,:class => 'img-circle') %>
    <%end%></br>
       <%= f.file_field :avatar %>
  </div></br>


  <div class="form-group">
    <%= f.label :current_password, :class=>"exampleInputFile" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <div class="actions">
    <%= f.submit "Update", :class=>'btn btn-primary' %>
  </div>
<% end %>
  <%= devise_error_messages! %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=>"btn btn-danger" %></p>

<%= link_to "Back", :back %>
</div>
</div>